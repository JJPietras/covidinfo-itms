<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hospitals.HospitalsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/hospitalsHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/topBackground"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:src="@drawable/side_nav_bar" />

                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:background="#00FFFFFF"
                    app:layout_anchorGravity="end|bottom"
                    app:srcCompat="@drawable/ic_menu_button" />

                <ImageButton
                    android:id="@+id/polandBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="170dp"
                    android:layout_marginEnd="170dp"
                    android:background="#00FFFFFF"
                    android:paddingTop="10dp"
                    android:rotation="180"
                    app:srcCompat="@drawable/ic_reset_to_pl" />

                <TextView
                    android:id="@+id/unravel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topBackground"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130dp"
                    android:layout_marginEnd="130dp"
                    android:layout_marginBottom="77dp"
                    android:fontFamily="@font/roboto"
                    android:text="Pokaż wszystkie"
                    android:textColor="#73FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topBackground"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130dp"
                    android:layout_marginEnd="57dp"
                    android:layout_marginBottom="185dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Wojewódzki Szpital Specjalistyczny"
                    android:textColor="#DCFFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hospitalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topBackground"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="129dp"
                    android:layout_marginEnd="58dp"
                    android:layout_marginBottom="164dp"
                    android:fontFamily="@font/roboto"
                    android:text="M. Skłodowskiej-Curie"
                    android:textColor="#73FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hospitalContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topBackground"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="130dp"
                    android:layout_marginEnd="57dp"
                    android:layout_marginBottom="145dp"
                    android:fontFamily="@font/roboto"
                    android:text="Parzęczewska 35, (42) 714 45 00"
                    android:textColor="#73FFFFFF"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/prevDayBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="370dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_left_day" />

                <ImageButton
                    android:id="@+id/nextDayBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="370dp"
                    android:layout_marginEnd="25dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_right_day" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="210dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|left"
                    android:text="Liczba szpitali jednoimiennych"
                    android:textColor="#59FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/infections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="224dp"
                    android:layout_marginTop="75dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center|right"
                    android:text="22"
                    android:textColor="#FFFFFF"
                    android:textSize="56dp" />

                <TextView
                    android:id="@+id/recovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="259dp"
                    android:layout_marginTop="228dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center|right"
                    android:text="604"
                    android:textColor="#C2185B"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/curedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginEnd="236dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|left"
                    android:text="zajęte respiratory"
                    android:textColor="#59FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/diedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="251dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|left"
                    android:text="zajęte łóżka"
                    android:textColor="#59FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/died"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="259dp"
                    android:layout_marginTop="165dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center|right"
                    android:text="7 612"
                    android:textColor="#C2185B"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/hospitalsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/topBackground"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/roboto"
                    android:text="Szpitale"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/districtInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="284dp"
                    android:layout_marginEnd="100dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="textPersonName"
                    android:text="Podaj województwo"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="309dp"
                    android:layout_marginEnd="258dp"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_hospitals" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/hospitalsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/hospitalOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/hospitalOneIco"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:background="@drawable/ic_hospitals"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.36"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hospitalOneTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|left"
                            android:text="Wojewódzki Szpital Specjalistyczny"
                            android:textColor="#373737"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hospitalOneName"
                            android:layout_width="wrap_content"
                            android:layout_height="0sp"
                            android:layout_weight="0.15"
                            android:fontFamily="@font/roboto"
                            android:gravity="center|left"
                            android:text="M. Skłodowskiej-Curie"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hospitalOneName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|left"
                            android:text="Parzęczewska 35, (42) 714 45 00"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/hospitalOneMap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@drawable/ic_map_point"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hospitalTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/hospitalTwoIco"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:background="@drawable/ic_small_hospital"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.36"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hospitalTwoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="bottom|left"
                            android:text="Szpital Wojewódzki"
                            android:textColor="#373737"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hospitalTwoName"
                            android:layout_width="wrap_content"
                            android:layout_height="0sp"
                            android:layout_weight="0.15"
                            android:fontFamily="@font/roboto"
                            android:gravity="center|left"
                            android:text="Jana Pawła II"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hospitalTwoName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|left"
                            android:text="Czapliniecka 123, 512 030 463"
                            android:textColor="#707070"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/hospitalOneMap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@drawable/ic_map_point"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:textSize="22sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>