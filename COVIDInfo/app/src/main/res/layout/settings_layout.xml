<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundDark"
    android:padding="20dp"
    >

    <!--<RelativeLayout
        android:id="@+id/statisticsHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Dni wstecz"
                android:textColor="@color/colorTextOnBlack"
                android:textSize="22sp" />

            <NumberPicker
                android:id="@+id/daysPickerToday"
                android:layout_width="wrap_content"
                android:layout_height="100dp"

                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"


                android:theme="@style/MyNumberPickerTheme" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_weight="0.6"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Wybrane kraje"
                    android:textColor="@color/colorTextOnBlack"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/statisticsChangeCountryBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"

                    android:layout_weight="0.5"
                    android:background="#00FFFFFF"
                    android:gravity="end"
                    android:scaleX="-1.0"
                    app:srcCompat="@drawable/ic_less" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings bich"
                android:textColor="@color/colorTextOnBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />

            <Button
                android:id="@+id/button_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kill Me"
                />
        </LinearLayout>


</LinearLayout>