                        <TextView
                            android:id="@+id/vaccineWorthTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentStart="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"

                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/vaccine_peace"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/vaccineWorthImage3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="35dp"
                            android:contentDescription="@string/actions_content_desc_first_img"
                            android:src="@drawable/ic_peace_of_mind" />

                        <TextView
                            android:id="@+id/vaccineWorthText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vaccineWorthTitle3"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="19dp"
                            android:layout_toStartOf="@+id/vaccineWorthImage3"
                            android:fontFamily="@font/roboto"
                            android:text="@string/vaccine_close_ones2"
                            android:textColor="#ABFFFFFF"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/vaccineWorthArgument4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        tools:visibility="visible">


                        <ImageView
                            android:id="@+id/vaccineWorthImage4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:contentDescription="@string/actions_content_desc_second_img"
                            android:src="@drawable/ic_protection" />

                        <TextView
                            android:id="@+id/vaccineWorthTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
