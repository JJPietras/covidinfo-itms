<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.todayIllness.TodayIllnessFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/statisticsHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/statisticsBackground"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/side_nav_bar" />

                <ImageButton
                    android:id="@+id/statisticsMenuBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:background="#00FFFFFF"
                    app:layout_anchorGravity="end|bottom"
                    app:srcCompat="@drawable/ic_menu_button" />

                <ImageButton
                    android:id="@+id/statisticsChangeCountryBtn"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="280dp"
                    android:layout_marginEnd="40dp"
                    android:background="#00FFFFFF"
                    app:layout_anchorGravity="end|bottom"
                    app:srcCompat="@drawable/ic_select_country" />

                <ImageButton
                    android:id="@+id/statisticsShowAll"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="280dp"
                    android:background="#00FFFFFF"
                    app:layout_anchorGravity="end|bottom"
                    app:srcCompat="@drawable/ic_reset_to_pl" />

                <TextView
                    android:id="@+id/statisticsPoland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/statisticsBackground"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="39dp"
                    android:layout_marginBottom="26dp"
                    android:fontFamily="@font/roboto"
                    android:text="Polska"
                    android:textColor="#73FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statisticsChangeCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/statisticsBackground"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="26dp"
                    android:fontFamily="@font/roboto"
                    android:text="Zmień Kraj"
                    android:textColor="#73FFFFFF"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/statisticsPrevDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="162dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_left_day" />

                <ImageButton
                    android:id="@+id/statisticsNextDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="162dp"
                    android:layout_marginEnd="30dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/ic_right_day" />

                <TextView
                    android:id="@+id/statisticsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="140dp"
                    android:fontFamily="@font/roboto"
                    android:text="04.11.2020"
                    android:textAlignment="center"
                    android:textColor="#59FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statisticsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="125dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="24132"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/statisticsCured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="155dp"
                    android:layout_marginTop="319dp"
                    android:layout_marginEnd="155dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="476"
                    android:textAlignment="center"
                    android:textColor="#388E3C"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/statisticsCuredTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="349dp"
                    android:layout_marginEnd="134dp"
                    android:fontFamily="@font/roboto"
                    android:text="wyzdrowiało"
                    android:textAlignment="center"
                    android:textColor="#59FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statisticsIncreaseNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="+243"
                    android:textAlignment="center"
                    android:textColor="#D8F44336"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statisticsIncreasePercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="70dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="+5%"
                    android:textAlignment="center"
                    android:textColor="#D8F44336"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statisticsInfectionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="110dp"
                    android:fontFamily="@font/roboto"
                    android:text="nowe zakażenia"
                    android:textAlignment="center"
                    android:textColor="#59FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/statisticsDiedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="277dp"
                    android:layout_marginEnd="150dp"
                    android:fontFamily="@font/roboto"
                    android:text="umarło"
                    android:textAlignment="center"
                    android:textColor="#59FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statisticsDied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="155dp"
                    android:layout_marginTop="247dp"
                    android:layout_marginEnd="155dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="301"
                    android:textAlignment="center"
                    android:textColor="#C2185B"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/statisticsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/statisticsBackground"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/roboto"
                    android:text="Zachorowania"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/statisticsCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="PL"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@+id/statisticsBackground"
                    app:layout_constraintTop_toBottomOf="@+id/statisticsBackground" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/statisticsCountriesLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/statisticsSelectCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Wybierz Państwo"
                    android:textColor="#303F9F"
                    android:textSize="30sp" />

                <LinearLayout
                    android:id="@+id/statisticsChoicePolska"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20px">

                    <Button
                        android:id="@+id/statisticsPolskaButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="0.18"
                        android:background="@drawable/sphere"
                        android:backgroundTint="#6f79fc"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:text="PL"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom|left"
                            android:text="Polska"
                            android:textColor="#373737"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|left"
                            android:text="Europa"
                            android:textColor="#707070"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/polskaInfections"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.52"
                        android:fontFamily="@font/roboto"
                        android:gravity="bottom|right"
                        android:text="24132 zakażeń"
                        android:textColor="#4C4C4C"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choiceNiemcy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20px">

                    <Button
                        android:id="@+id/niemcyButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="0.18"
                        android:background="@drawable/sphere"
                        android:backgroundTint="#F44336"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:text="DE"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/niemcyName"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom|left"
                            android:text="Niemcy"
                            android:textColor="#373737"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/niemcyContinent"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|left"
                            android:text="Europa"
                            android:textColor="#707070"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/niemcyInfetions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.52"
                        android:fontFamily="@font/roboto"
                        android:gravity="bottom|right"
                        android:text="16730 zakażeń"
                        android:textColor="#4C4C4C"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choiceWlochy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20px">

                    <Button
                        android:id="@+id/wlochyButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="0.18"
                        android:background="@drawable/sphere"
                        android:backgroundTint="#009688"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:text="IT"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/wlochyText"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom|left"
                            android:text="Włochy"
                            android:textColor="#373737"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/wlochyContinent"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|left"
                            android:text="Europa"
                            android:textColor="#707070"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/wlochyInfections"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.52"
                        android:fontFamily="@font/roboto"
                        android:gravity="bottom|right"
                        android:text="18329 zakażeń"
                        android:textColor="#4C4C4C"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choiceUSA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="20px">

                    <Button
                        android:id="@+id/usaButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="0.18"
                        android:background="@drawable/sphere"
                        android:backgroundTint="#FFC107"
                        android:fontFamily="@font/roboto_bold"
                        android:maxWidth="58dp"
                        android:text="US"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/usaText"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="bottom|left"
                            android:text="USA"
                            android:textColor="#373737"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/usaContinent"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_weight="0.25"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|left"
                            android:text="Ameryka Północna"
                            android:textColor="#707070"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/usaInfections"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.52"
                        android:fontFamily="@font/roboto"
                        android:gravity="bottom|right"
                        android:text="243569 zakażeń"
                        android:textColor="#4C4C4C"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/graphs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/newCasesGraphText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/table_new_text"
                    android:textColor="#303F9F"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp">

                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aaChartViewNewCases"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_test"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/totalCasesGraphText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/table_sum_text"
                    android:textColor="#303F9F"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp">

                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aaChartViewTotalCases"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_test"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/newActiveGraphText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Wykres aktywnych przypadków"
                    android:textColor="#303F9F"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp">

                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aaChartViewActiveCases"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_test"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/healthGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Wykres Ozdrowień"
                    android:textColor="#303F9F"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp">

                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aaChartViewRecovered"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_test"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/deathGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Wykres Ofiar Smiertelnych"
                    android:textColor="#303F9F"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp">

                    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                        android:id="@+id/aaChartViewDied"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_test"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>