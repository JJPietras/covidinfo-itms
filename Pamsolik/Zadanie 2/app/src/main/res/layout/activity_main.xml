<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="149dp"
        android:layout_height="42dp"
        android:onClick="onClick"
        android:text="@string/google"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCompute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSecondActivity" />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="223dp"
        android:layout_height="77dp"
        android:onClick="onClick"
        android:text="@string/compute"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

    <Button
        android:id="@+id/btnCMap"
        android:layout_width="149dp"
        android:layout_height="42dp"
        android:onClick="onClick"
        android:text="@string/map"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCompute" />

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="149dp"
        android:layout_height="42dp"
        android:onClick="onClick"
        android:text="@string/phone"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCMap" />

    <Button
        android:id="@+id/btnSecondActivity"
        android:layout_width="149dp"
        android:layout_height="42dp"
        android:onClick="onClick"
        android:text="@string/sActivity"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

</androidx.constraintlayout.widget.ConstraintLayout>